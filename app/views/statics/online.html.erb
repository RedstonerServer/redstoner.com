<% title "Who's Playing?" %>
<h1>These players are currently playing on Redstoner:</h1>
<div id="userlist">
  <% @players.each do |u| %>
    <div class="list-user">
      <%= link_to(u.avatar(64), u) %>
      <div class="detail">
        <%= render partial: "users/username", locals: { user: u } %><br>
        <i><%= u.ign %></i>
        <% unless u.id %>
          <br><i>(Not signed up)</i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

